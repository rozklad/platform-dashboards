{
	"name": "sanatorium/dashboards",
	"type": "platform-extension",
	"description": "Dashboards extension for Cartalyst Platform",
	"authors": [
		{
			"name": "Sanatorium",
			"email": "info@sanatorium.ninja"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://packages.cartalyst.com"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"cartalyst/composer-installers": "1.2.*",
		"illuminate/support": "~5.0",
		"platform/foundation": "~2.0|~3.0"
	},
	"autoload": {
		"classmap": [
			"database/migrations",
			"database/seeds"
		],
		"psr-4": {
			"Sanatorium\\Dashboards\\": "src/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
